<mvc:View
  controllerName="com.sfc.routing.controller.App"
	displayBlock="true"
	height="100%"
	xmlns="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<FlexibleColumnLayout id="layout" 
    stateChange=".onStateChanged" 
    layout="{layout>/layout}" 
    backgroundDesign="Solid">
		<beginColumnPages>
			<mvc:XMLView id="beginView" viewName="com.sfc.routing.view.Master"/>
		</beginColumnPages>
		<midColumnPages>
			<mvc:XMLView id="detailView" viewName="com.sfc.routing.view.Detail"/>
		</midColumnPages>
	</FlexibleColumnLayout>
</mvc:View>